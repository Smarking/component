<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pitaya.checkout.CheckoutActivity">

    <TextView
        android:id="@+id/secondScreen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="副屏" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sumMoneyEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="输入总应付金额" />

        <Button
            android:id="@+id/sumMoneyBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总应付金额: " />

        <TextView
            android:id="@+id/sumMoneyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="199元" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vipcardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员卡优惠: " />

        <TextView
            android:id="@+id/discountMoneyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="199元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付: " />

        <TextView
            android:id="@+id/alreadyMoneyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="199元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余应付: " />

        <TextView
            android:id="@+id/residueMoneyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="199元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cashBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkout_paytype_cash"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vipcardBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkout_paytype_vipcard"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/debitcardBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkout_paytype_debitcard"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weixinBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkout_paytype_weixin"
            android:textSize="18sp" />
    </LinearLayout>


    <Button
        android:id="@+id/checkoutBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="结账" />

</LinearLayout>
